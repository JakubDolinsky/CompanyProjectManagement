<Window x:Class="Sprava_projektov_firmy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sprava_projektov_firmy"
        mc:Ignorable="d"
        Title="Správa projektov firmy - prihlásenie" Height="450" Width="450" WindowStartupLocation="CenterScreen" >
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center" Orientation="Vertical" >
            <StackPanel  HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Meno" Target="{Binding ElementName=userName}" FontSize=" 13"/>
                <TextBox Name ="userName" Width="120" Height="30" Margin="10,0,0,0"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="10">
                <Label Content="Heslo" Target="{Binding ElementName=password}" FontSize=" 13"/>
                <PasswordBox  Name ="password" Width="120" Height="30" Margin=" 10,0,0,0"/>
            </StackPanel>
            <Button Name="logButton" Content="Prihlásiť" Margin="171,30,171,0" Click="LogButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
